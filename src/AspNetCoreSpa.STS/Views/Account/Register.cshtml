@using AspNetCoreSpa.STS.Resources
@inject LocService SharedLocalizer
@model RegisterViewModel
@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("REGISTER");
}
        <partial name="_ValidationSummary" />
     
             <form class="container-fluid dangky text-center" asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <img src="~/images/background.jpg" alt="nen">
                <div id="dk-content" >
                 <div class="text-left">
                   <p class="h1 text-center text-light">Create Account</p>
                    
                     <div class="form-group mb-2 mt-2">
                                    <label class="text-light mb-1" asp-for="Email">@SharedLocalizer.GetLocalizedHtmlString("EMAIL")</label>
                                    <input asp-for="Email" class="form-control bg-dark text-light" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-2 mt-2">
                                    <label class="text-light mb-1" asp-for="Password">@SharedLocalizer.GetLocalizedHtmlString("PASSWORD")</label>
                                    <input asp-for="Password" class="form-control bg-dark text-light" />
                                    <span asp-validation-for="Password" class="text-danger "></span>
                                </div>
                                <div class="form-group mb-2 mt-2">
                                    <label class="text-light mb-1" asp-for="ConfirmPassword">@SharedLocalizer.GetLocalizedHtmlString("CONFIRM_PASSWORD")</label>
                                    <input asp-for="ConfirmPassword" class="form-control bg-dark text-light" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
              
                 </div>
        
                    <button class="btn btn-primary bnt-dk-dk" type="submit"  name="button" value="register">Create</button>
                    <button class="btn btn-success bnt-dk-dk mr-2 cancel" formmethod="get"  asp-action="Login" >@SharedLocalizer.GetLocalizedHtmlString("ACCOUNT_LOGIN")</button>
                </div>
              </form>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
